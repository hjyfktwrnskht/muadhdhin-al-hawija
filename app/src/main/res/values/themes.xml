<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MuadhdhinAlHawija" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. (أخضر داكن) -->
        <item name="colorPrimary">@color/dark_green</item>
        <item name="colorPrimaryVariant">@color/darker_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. (ذهبي) -->
        <item name="colorSecondary">@color/gold</item>
        <item name="colorSecondaryVariant">@color/dark_gold</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/light_background</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="Theme.MuadhdhinAlHawija.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MuadhdhinAlHawija.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MuadhdhinAlHawija.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
